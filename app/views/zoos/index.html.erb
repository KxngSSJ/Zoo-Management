<div id="zoo">
<h1>Zoo Worker Information</h1>

<table class="table table-striped table-bordered table-hover">
<thead class="thead-dark">
<tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Email</th>
    <th>Phone</th>
    <th>Animal</th>
    <th>Link</th>
</tr>
</thead>
<tbody>
<% @zoos.each do |zoo| %>
<tr>
  <td> <%= zoo.first_name %> </td>
  <td> <%= zoo.last_name %> </td>
  <td> <%= zoo.email %> </td>
  <td> <%= zoo.phone %> </td>
  <td> <%= zoo.animal %> </td>
  <td> <%= link_to "Show this Information", zoo %>
<tr>
<% end %>
</tbody>
</table>
<%= link_to "Add New Worker", new_zoo_path, class:"btn btn-success" %>
</div>